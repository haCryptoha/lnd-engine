{
  "name": "lnd-engine",
  "version": "0.1.0",
  "description": "Kinesis engine for LND",
  "main": "src/index.js",
  "standard": {
    "env": [
      "mocha",
      "chai"
    ],
    "ignore": [
      "docs/*"
    ]
  },
  "scripts": {
    "prebuild": "bash ./scripts/prebuild.sh",
    "build": "bash ./scripts/build.sh",
    "pretest": "npm run format-no-fail",
    "test": "npm run test-engine",
    "test-engine": "NODE_PATH=. mocha 'src/**/*.spec.js'",
    "coverage": "nyc npm run test",
    "format": "standard --fix",
    "docs": "jsdoc -c .jsdoc.json",
    "postdoc": "http-server docs",
    "format-no-fail": "standard --fix; exit 0",
    "fund": "bash ./scripts/fund-simnet-wallet.sh",
    "ci-test": "npm run format && npm run test-engine"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinesis-exchange/lnd-engine.git"
  },
  "keywords": [
    "lnd",
    "kinesis",
    "exchange",
    "bitcoin",
    "btc",
    "ltc",
    "litecoin"
  ],
  "author": "Danny Paz <dan.pazuchowski@gmail.com> (http://www.dannypaz.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kinesis-exchange/lnd-engine/issues"
  },
  "homepage": "https://github.com/kinesis-exchange/lnd-engine#readme",
  "devDependencies": {
    "chai": "4.1.2",
    "chai-as-promised": "7.1.1",
    "dirty-chai": "2.0.1",
    "http-server": "0.11.1",
    "jsdoc": "3.5.5",
    "minami": "1.2.3",
    "mocha": "5.1.1",
    "nyc": "11.7.3",
    "rewire": "4.0.1",
    "sinon": "5.0.7",
    "sinon-chai": "3.0.0",
    "standard": "11.0.1",
    "timekeeper": "2.1.2"
  },
  "dependencies": {
    "big.js": "5.1.2",
    "grpc": "1.11.3",
    "timeout-as-promise": "1.0.0"
  }
}
