{
  "name": "lnd-engine",
  "version": "0.1.0",
  "description": "Kinesis engine for LND",
  "main": "index.js",
  "standard": {
    "env": [
      "mocha",
      "chai"
    ],
    "ignore": [
      "docs/*"
    ]
  },
  "scripts": {
    "prebuild": "bash ./scripts/prebuild.sh",
    "build": "bash ./scripts/build.sh",
    "pretest": "npm run format",
    "test": "NODE_PATH=. nyc mocha 'src/**/*.spec.js'",
    "format": "standard --fix",
    "start": "node ./scripts/console.js",
    "doc": "jsdoc src -d docs",
    "postdoc": "http-server docs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kinesis-exchange/lnd-engine.git"
  },
  "keywords": [
    "lnd",
    "kinesis",
    "exchange",
    "bitcoin",
    "btc",
    "ltc",
    "litecoin"
  ],
  "author": "Danny Paz <dan.pazuchowski@gmail.com> (http://www.dannypaz.com)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kinesis-exchange/lnd-engine/issues"
  },
  "homepage": "https://github.com/kinesis-exchange/lnd-engine#readme",
  "devDependencies": {
    "chai": "4.1.2",
    "dirty-chai": "2.0.1",
    "http-server": "0.11.1",
    "jsdoc": "3.5.5",
    "mocha": "5.1.1",
    "nyc": "11.7.1",
    "rewire": "4.0.1",
    "sinon": "4.5.0",
    "sinon-chai": "3.0.0",
    "standard": "11.0.1"
  },
  "dependencies": {
    "grpc": "1.10.1"
  }
}
